
@{
    ViewBag.Title = "Admin";

}



<h2>Product Listings</h2>
<table class="table">

    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Quantity</th>
        <th>Price</th>
    </tr>


    @foreach (var c in ViewBag.ItemList)
    {
        <tr>
            <td>@c.Name</td>
            <td>@c.Description</td>
            <td>@c.Quantity</td>
            <td>$@c.Price</td>



            <td>
                <a href="/Home/EditItem?Name=@c.Name" class="btn btn-sm btn-warning">Edit</a>
            </td>

            <td>
                <a href="/Home/DeleteItem?Name=@c.Name" onclick="return confirm('Are you sure you want to delete this item?')" class="btn btn-danger btn-sm">
                    <span class="glyphicon glyphicon-trash"></span> Delete
                </a>
            </td>
        </tr>

        
    }

</table>
<a href="/Home/AddNewItem" class="btn btn-sm btn-primary">Add Item</a>




